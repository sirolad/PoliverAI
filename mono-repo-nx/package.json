  "scripts": {
    "test": "nx test",
    "test:watch": "nx test --watch",
    "test:app": "cd apps/poliverai && npx jest --config jest.config.ts",

    "lint": "nx lint",
    "typecheck": "npx tsc -b --noEmit",

    "start:web": "cd apps/poliverai && npx vite",
    "website:dev": "cd apps/website && yarn dev",
    "website:build": "cd apps/website && yarn build",
    "website:preview": "cd apps/website && yarn preview",

    "start:metro": "cd apps/poliverai && npx react-native start",
    "start:android": "cd apps/poliverai && npx react-native run-android",
    "start:ios": "cd apps/poliverai && npx react-native run-ios",

    "run:android": "cd apps/poliverai && npx react-native run-android",
    "run:ios": "cd apps/poliverai && npx react-native run-ios",
    "run:macos": "cd apps/poliverai && npx react-native run-macos",
    "run:windows": "cd apps/poliverai && npx react-native run-windows",

    "start:macos": "cd apps/poliverai && npx react-native run-macos",
    "start:windows": "cd apps/poliverai && npx react-native run-windows",
    
    "build:web:dev": "cd apps/poliverai && NODE_ENV=development npx vite build --outDir ../../dist/apps/poliverai/web-dev",
    "build:web:release": "cd apps/poliverai && NODE_ENV=production npx vite build --outDir ../../dist/apps/poliverai/web",

    "build:android:dev": "cd apps/poliverai && npx react-native run-android",
    "build:ios:dev": "cd apps/poliverai && npx react-native run-ios",

    "build:android:release": "cd apps/poliverai && echo \"Release builds require EAS or native toolchain (see README).\" && exit 1",
    "build:ios:release": "cd apps/poliverai && echo \"Release builds require EAS or native toolchain (see README).\" && exit 1"
