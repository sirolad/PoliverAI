{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@poliverai/source"],
    "baseUrl": ".",
    "paths": {
      "@poliverai/shared-ui": ["shared-ui/src/index.ts"],
      "@poliverai/intl": ["libs/intl/src/index.ts"],
      "@assets": ["apps/poliverai/assets/index.ts"],
      "@assets/*": ["apps/poliverai/assets/*"]
    }
    ,
    "resolveJsonModule": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
